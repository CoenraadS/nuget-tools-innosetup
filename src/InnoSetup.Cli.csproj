<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <CopyOutputSymbolsToPublishDirectory>false</CopyOutputSymbolsToPublishDirectory>
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>GetISCCPath</ToolCommandName>
        <NoWarn>NU5100</NoWarn>
    </PropertyGroup>

    <PropertyGroup>
        <PackageId>InnoSetup.Cli</PackageId>
        <PackageTags>installer inno innosetup</PackageTags>
        <Description>
            InnoSetup packaged for use with dotnet tool Install
        </Description>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="..\InnoSetup\**">
            <PackagePath>content\InnoSetup</PackagePath>
            <Pack>true</Pack>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>
</Project>
  